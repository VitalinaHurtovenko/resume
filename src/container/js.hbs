<div style="margin-left: 30px;">
    <h1 style="text-align: center;">{{name}}</h1>
    <div>{{description}}</div>

    <hr>

    <div>
        <h2>History:</h2>
    </div>

    <div>
        {{name}} was founded by
        {{#with history}}
        {{founder}} in {{year}}.
        {{/with}}
    </div>

    <br>

    <div>
        <div>
            <h3>Types:</h3>
        </div>
        <ul>
            {{#each types}}
            <li>

                {{this}}
                <br>
            </li>
            {{/each}}
        </ul>
    </div>

    <div>
        <div>
            <div>
                <h4>Syntax:</h4>
            </div>

            <div style="margin-left: 30px;">
                {{#with syntax}}
                <div><em>Variables:</em></div>
                <ul>
                    {{#each variables}}
                    <li>
                        {{this}}
                    </li>
                    {{/each}}
                </ul>

                <div><em>Functions:</em></div>
                <ul>

                    {{#each functions}}
                    <li>
                        {{this}}
                    </li>
                    {{/each}}
                </ul>

                <div><em>Conditionals:</em></div>
                <ul>
                    {{#each conditionals}}
                    <li>
                        {{this}}

                    </li>
                    {{/each}}
                </ul>

                <div><em>Loops:</em></div>
                <ul>
                    {{#each loops}}
                    <li>
                        {{this}}
                    </li>
                    {{/each}}
                </ul>

                <div><em>Classes:</em></div>
                <ul>
                    {{#each classes}}
                    <li>
                        {{this}}
                    </li>
                    {{/each}}
                </ul>
                {{/with}}
            </div>

            <div>
                <h5>Features:</h5>
            </div>
            <ul>
                {{#each features}}
                <li>
                    {{this}}
                </li>
                {{/each}}
            </ul>

            <div>
                <div>
                    <h6>Libraries:</h6>
                </div>
                <ul>
                    {{#each libraries}}
                    <li>
                        {{this}}
                    </li>
                    {{/each}}
                </ul>
            </div>

            <div>
                <div>
                    <h6>Tools:</h6>
                </div>
                <ul>
                    {{#each tools}}
                    <li>
                        {{this}}
                    </li>
                    {{/each}}
                </ul>
            </div>

            <div>
                <div>
                    <h6>Community:</h6>
                </div>
                <ul>
                    {{#each community}}
                    <li>
                        <div>Name: {{name}}</div>
                        <div>Type: {{type}}</div>
                        <br>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>