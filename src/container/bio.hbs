<div class='m-3'>

  <div class='py-3'>
    <a href='/index' class='btn btn-primary'><i
        class='bi bi-arrow-90deg-left'
      ></i>
      Back</a>
  </div>

  <div>
    <h1>{{name}}</h1>
  </div>
  <div>
    <time datetime='1879-03-14'>{{birthdate}}</time>
    -
    <time datetime='1955-04-18'>{{deathdate}}</time>
  </div>

  <div>
    <p>He was born in
      {{birthplace}}, and died in
      {{deathplace}}
    </p>
  </div>
  <div>Nationality: {{nationality}}</div>

  <br />

  <div>Occupation: {{occupation}}</div>

  <hr />

  <div class='row'>
    <div class='card col-3 m-2'>
      <div>
        <h2 class='m-4'>Was known for:</h2>
      </div>
      <div class='card-body'>
        {{#each known_for}}
          <ul>
            <li>
              {{this}}
            </li>
          </ul>
        {{/each}}
      </div>
    </div>

    <div class='col-4 card m-2'>
      <div class='card-body'>
        <div>
          <h2 class='mb-4'>Education:</h2>
        </div>
        <div style='margin-left: 20px;'>
          {{#each education}}
            <div>{{institution}}, {{degree}}</div>
            <br />
            <div>Specialization: {{field}}</div>
            <br />
            <div>Year of completion: {{year}}</div>
          {{/each}}
        </div>
      </div>
    </div>

    <br />

    <div class='col-4 card m-2'>
      <div class='card-body'>
        <div>
          <h2 class='mb-4'> Notable publication:</h2>
        </div>
        <div>
          {{#each notable_publications}}
            <ul>
              <li>
                <div><q>{{title}}</q>, {{year}}</div>
                <br />
                <div>Publisher: {{publisher}}</div>
                <br />
              </li>
            </ul>
          {{/each}}
        </div>
      </div>
    </div>

    <div class='col-3 card m-2'>
      <div class='card-body'>

        <div>
          <h2 class='mb-4'>Awards:</h2>
        </div>
        {{#each awards}}
          <div>{{title}}, {{year}}</div>
          <br />
          <div>
            <p>{{description}}</p>
          </div>
          <br />
        {{/each}}
      </div>

    </div>

    <div class='col-2 m-2 card'>
      <div class='card-body'>
        <div>
          <h3 class='mb-4'>Influences:</h3>
        </div>
        <div>
          {{#each influences}}
            <ul>
              <li>
                <div>{{this}}</div>
              </li>
            </ul>
          {{/each}}
        </div>

        <div>
          <h3 class='mb-4'>Influenced:</h3>
        </div>
        <div>
          {{#each influenced}}
            <ul>
              <li>
                <div>{{this}}</div>
              </li>
            </ul>
          {{/each}}
        </div>
      </div>
    </div>

    <div class='col-3 m-2 card'>
      <div class='card-body'>
        <div>
          <h2 class='mb-4'>Quotes:</h2>
        </div>
        <div>
          {{#each quotes}}
            <ul>
              <li>
                <div><q>{{this}}</q></div>
              </li>
            </ul>
          {{/each}}
        </div>
      </div>
    </div>

    <div class='col-3 m-2 card'>
      <div class='card-body'>
        <div>
          <h2 class='mb-4'>Major discoveries:</h2>
        </div>
        <div>
          {{#each major_discoveries}}
            <div>{{title}}, {{year}}</div>
            <br />
            <div>
              <p>{{description}}</p>
            </div>
            <br />
          {{/each}}
        </div>
      </div>

    </div>

    <div class='col-5 m-2 card'>
      <div class='card-body'>
        <div>
          <h2 class='mb-4'>Contributions:</h2>
        </div>
        {{#with contributions}}
          <div>
            <div>{{title}}</div>
            <div>
              <p>Description: {{description}}</p>
            </div>
            <div>Year: {{year}}</div>
            <br />
            <div>Field: {{field}}</div>
          </div>
        {{/with}}
      </div>
    </div>

    <br />

    <div class='col-6 m-2 card'>
      <div class='card-body'>
        <div>
          <h2 class='mb-4'>Partners:</h2>
        </div>
        {{#each partners}}
          <ul>
            <li>
              <div>{{name}}</div>
              <br />
              <div>Relationship: {{relationship}}</div>
              <br />
              <div>Years: {{years}}</div>
              <br />
            </li>
          </ul>
        {{/each}}

        <br />

      </div>
    </div>
  </div>

</div>