<div class='m-3'>
  <div class='card'>
		{{#with navigation}}
		<div class='nav nav-tabs'>
			{{#each links}}
			{{> links}}
			{{/each}}
		</div>
		{{/with}}
  </div>
  <div>
    	<h1 class='pt-5 pb-5'>{{header}}</h1>
  </div>

  <div class="row">
		<div class="col-8">
			{{#with contacts_data}}
				<h2>{{title}}</h2>
				<div class="mt-3">
						{{#each buttons}}
						{{> isOutline}}
						
						{{/each}}
				</div>
				<div>	
					{{#with form}}
						{{#with input}}
							<div class="row mt-3">
								<div class="col-6 mb-3">
									{{#with surname}}
									
										<label class="form-label">{{label}}</label>
										<input class="form-control" placeholder="{{placeholder}}">
										<caption class="form-text">{{caption}}</caption>
									
									{{/with}}
								</div>
								<div class="col-6 mb-3">
									{{#with name}}
										
											<label class="form-label">{{label}}</label>
											<input class="form-control" placeholder="{{placeholder}}">
											<caption class="form-text">{{caption}}</caption>
										
									{{/with}}
								</div>
								<div class="col-6 mb-3">
									{{#with phone}}
										
											<label class="form-label">{{label}}</label>
											<input class="form-control" placeholder="{{placeholder}}">
											<caption class="form-text">{{caption}}</caption>
										
									{{/with}}
								</div>
								<div class="col-6 mb-3">
									{{#with email}}
										
											<label class="form-label">{{label}}</label>
											<input class="form-control" placeholder="{{placeholder}}">
											<caption class="form-text">{{caption}}</caption>
										
									{{/with}}
								</div>
							</div>
						{{/with}}

						<hr class="mb-4">
						
						{{#each switch}}
						<div class="form-check form-switch mb-3">
							<label class="form-check-label">{{text}}</label>
							<input name="form" type="checkbox" class="form-check-input">
						</div>
						{{/each}}
					{{/with}}
					
				</div>
			{{/with}}

			<hr class="mb-4 mt-4">

			{{#with delivery}}
				<h4 class="mb-4">{{title}}</h4>

				<div class="card mb-3">
					<div class="card-body">
						<div class="row">
						
							{{#each select}}
								<div class="col-4">
									<label>{{label}}</label>
									<select class="form-select">
										<option selected disabled>{{placeholder}}</option>
									{{#each options}}
										<option value="{{value}}">{{text}}</option>
									{{/each}}
									</select>
								</div>
							{{/each}}
						
						</div>
					</div>
				</div>

				{{#each delivery_type}}
				<div>
					<div class="form-check mb-2">
						<label class="form-check-label">{{type}}</label>
						<input name="delivery" type="radio" class="form-check-input">
					</div>
				</div>
				{{/each}}
				
				<hr class="mb-4 mt-4">

				{{#with payment}}
				<div>
					<h4>{{title}}</h4>
				</div>
				{{#each list}}
				<div class="form-check mb-2">
					<label class="form-check-label">{{type}}</label>
					<input name="pay" type="radio" class="form-check-input">
					<p class="mt-3">{{> description}}</p>
				</div>
				{{/each}}
				{{/with}}

				<hr class="mb-4 mt-4">

				{{#with contact}}
					<h4 class=" mb-3">{{title}}</h4>
					<div class="row mb-3">
						{{#with surname}}
							<div class="col-6 mb-3">
								<label class="form-label">{{label}}</label>
								<input class="form-control" placeholder="{{placeholder}}">
								<caption class="form-text">{{caption}}</caption>
							</div>
						{{/with}}
						{{#with name}}
							<div class="col-6 mb-3">
								<label class="form-label">{{label}}</label>
								<input class="form-control" placeholder="{{placeholder}}">
								<caption class="form-text">{{caption}}</caption>
							</div>
						{{/with}}
						{{#with phone}}
							<div class="col-6 mb-3">
								<label class="form-label">{{label}}</label>
								<input class="form-control" placeholder="{{placeholder}}">
								<caption class="form-text">{{caption}}</caption>
							</div>
						{{/with}}
						{{#with email}}
							<div class="col-6 mb-3">
								<label class="form-label">{{label}}</label>
								<input class="form-control" placeholder="{{placeholder}}">
								<caption class="form-text">{{caption}}</caption>
							</div>
						{{/with}}
					</div>
				{{/with}}

				<hr class="mb-3 mt-3">

				{{#with coment}}
				<div class="mt-4 mb-4">
					<label class="form-label">{{label}}</label>
					<input class="form-control" placeholder="{{placeholder}}">
				</div>
				{{/with}}
				
				<hr class="mb-4 mt-4">
			{{/with}}

			{{#with coupon}}
				<h4 class="mb-4">{{title}}</h4>
				
				{{#with select}}
					<div class="mb-4">
						<div class="row">
							{{#with availabel_coupon}}
								<label class="form-label">{{label}}</label>
								<select class="form-select-lg col-12 m-1">
									<option value="" selected disabled>{{placeholder}}</option>
									{{#each options}}
										<option value="{{value}}">{{text}}</option>
									{{/each}}
								</select>
							{{/with}}
						</div>
					</div>

					<div class="mb-4">
						<div class="row">
							{{#with friend_coupon}}
								<label class="form-label">{{label}}</label>
								<select class="form-select-sm m-1">
									<option value=""selected disabled>{{placeholder}}</option>
									{{#each options}}
									<option value="{{value}}">{{text}}</option>
									{{/each}}
								</select>
							{{/with}}
						</div>
					</div>

					
				{{/with}}
				
				<div class="mb-4">
					{{#with add}}
						{{#with friend}}
							<div class="row mb-4">
								<label class="form-label">{{label}}</label>
								<input class="form-control-lg col-12" placeholder="{{placeholder}}">
								<caption class="form-text">{{caption}}</caption>
							</div>
						{{/with}}

						{{#with colleague}}
							<div class="row mb-4">
								<label class="form-label">{{label}}</label>
								<input class="form-control col-12" placeholder="{{placeholder}}">
								<caption class="form-text">{{caption}}</caption>
							</div>
						{{/with}}
					{{/with}}		
				</div>
			{{/with}}
			
			<hr class="mb-4 mt-4">

			{{#with quiz}}
				<div class="mb-4">
					<h3 class="mb-3">{{title}}</h3>
					{{#with preference}}
						<div class="mb-2">{{title}}</div>
						{{#each options}}
							<div class="form-check">
								<label class="form-check-label">{{this}}</label>
								<input name="preference" type="radio" class="form-check-input">
							</div>
						{{/each}}
					{{/with}}
				</div>

				<div class="mb-4">
					{{#with your_expirience}}
						<label class="form-label">{{label}}</label>
						<input class="form-control">
					{{/with}}
				</div>
				
				<div class="mb-4">
					{{#with purchase_frequency}}
						<label class="form-select-label">{{label}}</label>
						<select class="form-select">
							<option value="" selected disabled>{{placeholder}}</option>
							{{#each options}}
								<option value="{{value}}">{{text}}</option>
							{{/each}}
						</select>
					{{/with}}
				</div>

				<div class="mb-4">
					{{#with factors}}
						<p>{{title}}</p>
						{{#each options}}
							<div class="form-check">
								<label class="form-check-label">{{this}}</label>
								<input name="factors" type="radio" class="form-check-input">
							</div>
						{{/each}}
					{{/with}}
				</div>
			{{/with}}

			<hr class="mb-4 mt-4">

	
		</div>



		<div class="col-4">
			
			<div class="card mb-4">
				<div class="card-body">
					{{#each action_block}}
						<div>
							{{> isSuccess}}
						</div>
					{{/each}}
				</div>
			</div>

			<div class="card">
				<div class="card-body">
					{{#with total}}
						<h3>{{title}}</h3>
						{{#each item_list}}
							<div>{{name}}: {{price}}</div>
						{{/each}}
						<hr>
						{{#each additional_info}}
							<div>{{text}}: {{value}}</div>
						{{/each}}
						<hr>
						{{#with total_price}}
						{{text}}: {{value}}
						{{/with}}
						<hr>
						{{#each button}}
						{{> isPrimary}}
						
						{{/each}}
					{{/with}}
				</div>
			</div>
			
		</div>
  </div>

  
  <hr>
  

	<div class="nav nav-tabs">
		{{#each footer}}
			<div class="col-2">
				{{#each this}}
				
					{{> href}}
				
				{{/each}}
			</div>
		{{/each}}
	</div>
</div>