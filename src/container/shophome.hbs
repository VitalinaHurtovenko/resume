<div class="mt-3 ms-5 me-5">

    <div class="card mb-5">
        {{#with navigation}}
        <div class="nav nav-tabs">
            {{#each links}}
            <div class="nav-item">
                <a class="nav-link" href="{{href}}">{{text}}</a>
            </div>

            {{/each}}
            <div class="nav-item">
                <div class="nav-link disabled">Disabled</div>
            </div>
        </div>
        {{/with}}
    </div>

    <div class="mb-5">
        {{#with newsBlock}}
        <h3 class="text-center mb-3">{{title}}</h3>

        <div class="row g-1 gx-2 gy-4">
            {{#each cards}}
            <div class="col-3">
                <div class="card text-bg-dark">
                    <div class="card-header">
                        <div>{{title}} {{> isTopNew}}</div>
                    </div>
                    <div class="card-body">
                        <div>{{description}}</div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </div>

    <hr>

    <div class="mt-5 mb-5">
        {{#with goodsBlock}}
        <div class="nav nav-tabs">
            {{#each tabs}}
            {{> isTopNew}}
            {{/each}}

        </div>

        <div class="row mt-3 gx-2 gy-4">

            {{#each cards}}
            <div class="col-4">
                <div class="card">
                    <img class="card-img-top" src="{{image}}">
                    <div class="card-body">
                        <div class="card-title">{{title}} {{> IsNew}}</div>
                        <p>{{description}}</p>
                    </div>

                </div>
            </div>
            {{/each}}



        </div>
    </div>
    {{/with}}

    <hr>

    {{#with subscribe}}
    <div class="card mt-5 mb-5 text-bg-dark">
        <h2 class="card card-header">{{header}}</h2>
        <div class="card-body">
            <p>{{description}}</p>
            {{#each buttons}}
            <div>
                <a class="btn btn-primary mb-1  btn-sm" href="{{link}}">{{text}}</a>
            </div>
            {{/each}}
        </div>

    </div>
    {{/with}}

    <hr>

    {{#with service}}
    <div class="card text-center text-bg-success mt-5 mb-5">
        <div class="card-body">
            <h2> {{title}} </h2>
            <p> {{description}} </p>
            {{#each buttons}}
            <a class="btn btn-primary btn-sm" href="{{link}}">{{text}}</a>
            {{/each}}
        </div>
    </div>
    {{/with}}

    <hr>

    <div class="row">
        {{#each footer}}
        <div class="col-1">
            {{#each this}}
            <ol class="list-unstyled">
                <li><a href="link">{{text}}</a></li>

            </ol>
            {{/each}}
        </div>
        <div class="col-1"></div>
        {{/each}}
    </div>



</div>