{{!--
Це леяут по замовчюванню, котрий вже містить базову структуру HTML документа
І котрий обгортає код container файлів для будь-яких ендпоїнтів
--}}
<!DOCTYPE html>
<html>


<head class="m-3">

	<title>
		{{page.title}}
	</title>


	<meta charset='utf-8' />
	<link href='css/index.css' rel='stylesheet' />

	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
		integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>

<body class="m-4">
	{{#with header}}
	<header class="mb-2">
		<div class="mb-2">
			<h1>{{name.firstname}} {{name.lastname}}</h1>
		</div>

		<div class="mb-2">
			<b>{{position}}</b>
		</div>


		<div class="mb-2">
			<em>{{salary}}</em>
		</div>


		<address class="mb-2">
			<div>
				<em>{{address}}</em>
			</div>
		</address>


		<hr>
	</header>
	{{/with}}

	{{> nav}}

	{{! ↓ ця кострукція показує куди шаблонізатору треба вставляти код з container файлу --}}
	{{{body}}}

	<hr>

	{{> footer}}

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>